<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- エラー表示 -->
      <label class="control-label col-md-2" font-size x-large>基本情報</label>
      <br>
      <br>

      <%= f.label :name %> :  
      <%= @user.name %>
      <br>
      <br>

      <%= f.label :email %> :  
      <%= @user.email %>
      <br>
      <br>

      <%= f.label :address %> : 
      <%= @user.address %>
      <br>
      <br>

      <%= f.label :location %> : 
      <%= @user.location %>
      <br>
      <br>

    <% end %>
  </div>
</div>
